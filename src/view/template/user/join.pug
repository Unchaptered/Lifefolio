extends ../../base/base.pug

block content
    include ../partials/access/change/changeJoin.pug
    form#user__join(method="POST", enctype="multipart/form-data")
        span#access__Title #{Title}
        label(for="username") 이름
        input(name="username",type="text", placeholder="유저 이름", required, value=username)
        label(for="email") 이메일
        input(name="email",type="email", placeholder="이메일", required, value=email)
        label(for="password") 비밀번호
        input(name="password",type="password", placeholder="비밀번호", required)
        input(name="password2",type="password", placeholder="비밀번호 확인", required)
        include ../partials/access/select/selectMajorUser.pug
        label(for="age") 나이
        input(name="age", type="number", min=1, placeholder="나이", required, value=age)
        
        include ../partials/access/select/selectStatusUser.pug

        input(name="avatar", type="file", accept="image/*", id="avatar", required)

        input(name="create", type="submit", value="계정 생성")

    include ../partials/access/link/linkJoin.pug