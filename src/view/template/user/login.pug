extends ../../base/base.pug

block content
    include ../partials/access/change/changeLogin.pug
    form#user__login(method="POST").form__access
        span#access__Title #{Title}
        label(for="username") 이름/이메일
        input(name="username",type="text", placeholder="유저 이름 또는 이메일", required, value=username)
        label(for="password") 비밀번호
        input(name="password",type="password", placeholder="비밀번호", required)
        label(for="makeCookie") 자동로그인
        input(name="makeCookie", type="checkbox")
        input(name="create", type="submit", value="로그인")
    include ../partials/access/link/linkLogin.pug