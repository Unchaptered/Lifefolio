extends ../../base/base.pug
include ../mixins/userFolio.pug

block content
    form(method="POST").form__content
        div.form__profile
            include ../partials/user/userProfile.pug
                //- div x 3

            include ../partials/user/userSNS.pug
                //- div x 1

            include ../partials/user/userFollow.pug

            include ../partials/user/userProject.pug

    div.form__content-grid
        each folio in userDB.folioArray
            +folio(folio)
        else
            div.form__content
                div
                    span 현재 생성한 프로젝트가 없습니다.
                    br
                    br
                    span 새 프로젝트를 생성해서 Life Folio 를 체험해보세요!
                    br
                    a(href="/folio/upload")
                        span 새 프로젝트 업로드
